<!DOCTYPE html>
<html>
  <head>
    <title>Pragprog Books Online Store</title>
    <%= stylesheet_link_tag "scaffolds", "application" %>
    <%= stylesheet_link_tag "depot" , :media => "all" %>
    <%= javascript_include_tag :defaults %>
    <%= javascript_include_tag "prototype", "scriptaculous"%>
    <%= csrf_meta_tag %>
  </head>
  <body id="store">
    <div id="banner">
      <%= image_tag("logo.png" ) %>
      <%= @page_title || t('.title') %>
    </div>
    <div id="columns">
      <div id="side">
	<% if @cart %>
	  <%= hidden_div_if(@cart.line_items.empty?, :id => "cart" ) do %>
	    <%= render @cart  %>
	  <% end %>
	<% end %>
	<a href="http://www...."><%= t('.home') %></a><br />
	<a href="http://www..../faq"><%= t('.questions') %></a><br />
	<a href="http://www..../news"><%= t('.news') %></a><br />
	<a href="http://www..../contact"><%= t('.contact') %></a><br />
	<a href="#"> <%= Time.now %></a>
	
	<% if session[:user_id] %>
	  <br />
	  <%= link_to 'Orders', orders_path %>
	  <%= link_to 'Products', products_path %>
	  <%= link_to 'Users', users_path %>
	  <br />
	  
	  <%= button_to 'Logout', logout_path, :method => :delete, :confirmation => 'Do you want to logging out?'%>
	<% end %>
	
      </div>
      <div id="main">
	<%= yield %>
      </div>
    </div>
  </body>
</html>
